<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    android:id="@+id/motion_instrument"
    app:layoutDescription="@xml/main_instrument_scene"
    tools:layoutDescription="@null"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_instrument"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/store_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/hapi_drum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/hapi_drum_a" />


        <ImageView
            android:id="@+id/hapi_drum_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/anim_elevation"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/hapi_drum_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/anim_elevation"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/b" />

        <ImageView
            android:id="@+id/hapi_drum_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/anim_elevation"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/c" />

        <ImageView
            android:id="@+id/hapi_drum_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/anim_elevation"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/d" />

        <ImageView
            android:id="@+id/hapi_drum_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/anim_elevation"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/e" />

        <ImageView
            android:id="@+id/hapi_drum_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/anim_elevation"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/f"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/hapi_drum_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/anim_elevation"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/g" />

        <ImageView
            android:id="@+id/hapi_drum_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/anim_elevation"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/h"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/hapi_drum_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/anim_elevation"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/zero" />

        <Button
            android:id="@+id/button_zero"
            android:layout_width="@dimen/zero_sound_button"
            android:layout_height="@dimen/zero_sound_button"
            android:layout_marginBottom="50dp"
            android:alpha="0"
            android:elevation="@dimen/button_elevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@android:string/VideoView_error_button" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.44" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/button_a"
            android:layout_width="@dimen/weight_big_sound_button"
            android:layout_height="@dimen/height_big_sound_button"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:alpha="0"
            android:elevation="@dimen/button_elevation"
            android:rotation="-45"
            android:text="@android:string/VideoView_error_button"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/button_zero" />

        <Button
            android:id="@+id/button_b"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_smal_sound_button"
            android:layout_marginEnd="35dp"
            android:alpha="0"
            android:elevation="@dimen/button_elevation"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="@+id/button_zero"
            app:layout_constraintEnd_toStartOf="@+id/button_zero"
            app:layout_constraintTop_toTopOf="@+id/button_zero" />

        <Button
            android:id="@+id/button_c"
            android:layout_width="@dimen/weight_big_sound_button"
            android:layout_height="@dimen/height_big_sound_button"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="8dp"
            android:alpha="0"
            android:elevation="@dimen/button_elevation"
            android:rotation="45"
            android:text="Button"
            app:layout_constraintBottom_toTopOf="@+id/button_zero"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" />

        <Button
            android:id="@+id/button_d"
            android:layout_width="@dimen/height_smal_sound_button"
            android:layout_height="@dimen/weight_smal_sound_button"
            android:layout_marginBottom="39dp"
            android:alpha="0"
            android:elevation="@dimen/button_elevation"
            android:text="Button"
            app:layout_constraintBottom_toTopOf="@+id/button_zero"
            app:layout_constraintEnd_toEndOf="@+id/button_zero"
            app:layout_constraintStart_toStartOf="@+id/button_zero" />

        <Button
            android:id="@+id/button_e"
            android:layout_width="@dimen/weight_big_sound_button"
            android:layout_height="@dimen/height_big_sound_button"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="6dp"
            android:alpha="0"
            android:elevation="@dimen/button_elevation"
            android:rotation="135"
            android:text="Button"
            app:layout_constraintBottom_toTopOf="@+id/button_zero"
            app:layout_constraintStart_toStartOf="@+id/guideline3" />

        <Button
            android:id="@+id/button_f"
            android:layout_width="@dimen/weight_smal_sound_button"
            android:layout_height="@dimen/height_smal_sound_button"
            android:layout_marginStart="35dp"
            android:alpha="0"
            android:elevation="@dimen/button_elevation"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="@+id/button_zero"
            app:layout_constraintStart_toEndOf="@+id/button_zero" />

        <Button
            android:id="@+id/button_g"
            android:layout_width="@dimen/weight_big_sound_button"
            android:layout_height="@dimen/height_big_sound_button"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:alpha="0"
            android:elevation="@dimen/button_elevation"
            android:rotation="225"
            android:text="Button"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/button_zero" />

        <Button
            android:id="@+id/button_h"
            android:layout_width="@dimen/height_smal_sound_button"
            android:layout_height="@dimen/weight_smal_sound_button"
            android:layout_marginTop="33dp"
            android:alpha="0"
            android:elevation="@dimen/button_elevation"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="@+id/button_zero"
            app:layout_constraintTop_toBottomOf="@+id/button_zero" />

        <ImageView
            android:id="@+id/stop_all"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:alpha="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/btn_stop_all" />

        <TextView
            android:id="@+id/text_stop_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/stop_all"
            app:layout_constraintEnd_toEndOf="@+id/stop_all"
            app:layout_constraintStart_toStartOf="@+id/stop_all"
            app:layout_constraintTop_toBottomOf="@+id/stop_all" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/store_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_icon_for_shop"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/instrument_name"
            style="@style/H2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_shop"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Горная Река" />

        <TextView
            android:id="@+id/link_shop_name"
            style="@style/Text_medium"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instrument_name"
            tools:text="магазинчик" />

        <ImageView
            android:id="@+id/dotted_line_shop_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layerType="software"
            android:src="@drawable/dotted"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/link_shop_name"
            app:layout_constraintStart_toStartOf="@+id/link_shop_name"
            app:layout_constraintTop_toBottomOf="@+id/link_shop_name" />

        <TextView
            android:id="@+id/title_shop_name"
            style="@style/Text_medium"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/shop_title"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instrument_name" />

        <TextView
            android:id="@+id/shop_name"
            style="@style/Text_bold"
            android:layout_marginStart="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/title_shop_name"
            app:layout_constraintStart_toEndOf="@+id/title_shop_name"
            app:layout_constraintTop_toTopOf="@+id/title_shop_name"
            tools:text="Магазинчик" />

        <TextView
            android:id="@+id/title_diameter"
            style="@style/Text_medium"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="@string/diameter_title"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_shop_name" />

        <TextView
            android:id="@+id/shop_diameter"
            style="@style/Text_bold"
            android:layout_marginStart="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/title_diameter"
            app:layout_constraintStart_toEndOf="@+id/title_diameter"
            app:layout_constraintTop_toTopOf="@+id/title_diameter"
            tools:text="35 см" />

        <TextView
            android:id="@+id/title_weight"
            style="@style/Text_medium"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="@string/weight_title"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_diameter" />

        <TextView
            android:id="@+id/shop_weight"
            style="@style/Text_bold"
            android:layout_marginStart="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/title_weight"
            app:layout_constraintStart_toEndOf="@+id/title_weight"
            app:layout_constraintTop_toTopOf="@+id/title_weight"
            tools:text="35 см" />

        <TextView
            android:id="@+id/title_sound"
            style="@style/Text_medium"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="@string/sound_title"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_weight" />

        <TextView
            android:id="@+id/shop_sound"
            style="@style/Text_bold"
            android:layout_marginStart="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/title_sound"
            app:layout_constraintStart_toEndOf="@+id/title_sound"
            app:layout_constraintTop_toTopOf="@+id/title_sound"
            tools:text="35 см" />

        <Button
            android:id="@+id/button_shop"
            style="@style/Text_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_shop"
            android:drawableEnd="@drawable/ic_arrow_right_button"
            android:text="@string/shop_button"
            android:textAllCaps="false"
            android:textColor="@color/super_white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_sound" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <include layout="@layout/progress_view"/>

</androidx.constraintlayout.motion.widget.MotionLayout>
