<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="H1" >
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/super_black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="H2" parent="H1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text_bold" >
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/super_black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Text_medium" >
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/super_black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Text_small" parent="Text_medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text_super_small" parent="H1">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
