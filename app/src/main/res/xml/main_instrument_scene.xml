                android:id="@+id/hapi_drum_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/anim_elevation"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/f"
                tools:visibility="visible" />

            <Constraint
                android:id="@+id/hapi_drum_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/anim_elevation"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/g" />

            <Constraint
                android:id="@+id/hapi_drum_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/anim_elevation"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/h"
                tools:visibility="gone" />

            <Constraint
                android:id="@+id/hapi_drum_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/anim_elevation"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/zero" />

            <Constraint
                android:id="@+id/button_zero"
                android:layout_width="@dimen/zero_sound_button"
                android:layout_height="@dimen/zero_sound_button"
                android:layout_marginBottom="50dp"
                android:alpha="0"
