<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:tools="urn:oasis:names:tc:xliff:document:1.2"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/motion_operation">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="@integer/anim_duration_medium"
        motion:motionInterpolator="easeInOut" >

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/content_instrument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <Constraint
                android:id="@+id/hapi_drum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hapi_drum_a" />


            <Constraint
                android:id="@+id/hapi_drum_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/anim_elevation"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/a"
                tools:visibility="gone" />

            <Constraint
                android:id="@+id/hapi_drum_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
