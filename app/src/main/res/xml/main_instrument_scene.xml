                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/title_sound"
                app:layout_constraintStart_toEndOf="@+id/title_sound"
                app:layout_constraintTop_toTopOf="@+id/title_sound"
                tools:text="35 см" />

            <Constraint
                android:id="@+id/button_shop"
                style="@style/Text_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/button_shop"
                android:drawableEnd="@drawable/ic_arrow_right_button"
                android:text="@string/shop_button"
                android:textAllCaps="false"
                android:textColor="@color/super_white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shop_sound" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/content_instrument"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/store_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <Constraint
                android:id="@+id/hapi_drum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
