            <Constraint
                android:id="@+id/button_a"
                android:layout_width="@dimen/weight_big_sound_button"
                android:layout_height="@dimen/height_big_sound_button"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:alpha="0"
                android:elevation="@dimen/button_elevation"
                android:rotation="-45"
                android:text="@android:string/VideoView_error_button"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/button_zero" />

            <Constraint
                android:id="@+id/button_b"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_smal_sound_button"
